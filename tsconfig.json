{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "typeRoots": ["./src/types", "./node_modules/@types"]
   }
}